# ===== SERVIDOR =====
PORT=3030

# ===== PROVEEDOR DE IA =====
# Selecciona: 'openai' o 'gemini'
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# ===== WHATSAPP =====
# Solo Baileys (no oficial) - No requiere configuración
# Escanea el QR al iniciar el servidor

# ===== FACEBOOK =====
# Usando librería 'fb' (no oficial)
FACEBOOK_PAGE_ID=your_facebook_page_id
META_ACCESS_TOKEN=your_meta_access_token

# ===== INSTAGRAM =====
# Usando 'instagram-web-api' (no oficial, solo imágenes)
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# ===== X (TWITTER) =====
X_BEARER_TOKEN=your_x_bearer_token

# ===== CLOUDINARY =====
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_KEEP_UPLOADS=false