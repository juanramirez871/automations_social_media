# Copia este archivo a .env y rellena con tus credenciales

# Server
PORT=3030
NODE_ENV=development
LOG_LEVEL=debug

# WhatsApp provider: cloud (Meta Graph API) | baileys (no oficial, requiere escanear QR)
WHATSAPP_PROVIDER=cloud

# WhatsApp Cloud API (Facebook/Meta)
WHATSAPP_VERIFY_TOKEN=your_verify_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
META_ACCESS_TOKEN=your_long_lived_access_token

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Instagram provider: graph (Meta Graph API) | web (no oficial, requiere usuario/contrase√±a)
INSTAGRAM_PROVIDER=graph
# Para provider=web
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
INSTAGRAM_COOKIE_FILE=./instagram_cookies.json

# Facebook/Instagram Graph API
FACEBOOK_PAGE_ID=your_facebook_page_id
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_ig_business_account_id

# X (Twitter) API v2
X_BEARER_TOKEN=your_x_bearer_token
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_SECRET=your_x_access_secret

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret